{
  "dataset_reader": {
    "class_name": "conll2003_reader",
    "data_path": "/home/jesus/.deeppavlov/downloads/bsnlp/",
    "provide_pos": false
  },
  "dataset_iterator": {
    "class_name": "data_learning_iterator"
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "class_name": "bert_ner_preprocessor",
        "vocab_file": "{BERT_OLD_PATH}/vocab.txt",
        "do_lower_case": false,
        "max_seq_length": 512,
        "max_subword_length": 15,
        "token_maksing_prob": 0.0,
        "in": ["x", "y"],
        "out": ["x_subword_tokens", "x_subword_tok_ids", "pred_subword_mask", "y_subword"]
      },
      {
        "class_name": "mask",
        "in": ["x_subword_tokens"],
        "out": ["x_subword_mask"]
      },
      {
        "id": "tag_vocab",
        "class_name": "simple_vocab",
        "unk_token": ["O"],
        "pad_with_zeros": true,
        "save_path": "{NER_PATH}/tag.dict",
        "load_path": "{NER_PATH}/tag.dict",
        "fit_on": ["y"],
        "in": ["y_subword"],
        "out": ["y_subword_ind"]
      },
      {
        "class_name": "bert_ner",
        "n_tags": "#tag_vocab.len",
        "use_crf": false,
        "return_probas": false,
        "bert_config_file": "{BERT_OLD_PATH}/bert_config.json",
        "pretrained_bert": "{BERT_NEW_PATH}/model.ckpt-75006",
        "save_path": "{NER_PATH}/model",
        "load_path": "{NER_PATH}/model",
        "keep_prob": 0.1,
        "ema_decay": 0.9,
        "ema_variables_on_cpu": true,
        "optimizer": "tf.train:AdamOptimizer",
        "learning_rate": 1.6443457513284065e-05,
        "learning_rate_drop_patience": 20,
        "learning_rate_drop_div": 4.0,
        "load_before_drop": true,
        "min_learning_rate": 1e-6,
        "in": ["x_subword_tok_ids", "x_subword_mask", "pred_subword_mask"],
        "in_y": ["y_subword_ind"],
        "out": ["y_pred_ind"]
      },
      {
        "ref": "tag_vocab",
        "in": ["y_pred_ind"],
        "out": ["y_pred"]
      }
    ],
    "out": ["x", "y_pred"]
  },
  "train": {
    "epochs": 20,
    "batch_size": 4,
    "metrics": [
      {
        "name": "ner_f1",
        "inputs": ["y", "y_pred"]
      }
    ],
    "validation_patience": 100,
    "val_every_n_batches": 10,
    "test_best": true,
    "validate_best": true,
    "log_every_n_batches": 10,
    "tensorboard_log_dir": "{NER_PATH}/logs",
    "show_examples": false,
    "evaluation_targets": [
      "valid",
      "test"
    ],
    "class_name": "nn_trainer"
  },
  "metadata": {
    "variables": {
      "DOWNLOADS_PATH": "~/.deeppavlov/downloads",
      "BERT_NEW_PATH": "/home/kuratov/data/bg_cs_pl_runews_output_128/",
      "BERT_OLD_PATH": "/home/jesus/models/bert/bg_cs_pl_ru/",
      "NER_PATH": "~/.deeppavlov/models/ner_bsnlp_bert_yura"
    },
    "requirements": [
      "/cephfs/home/mary.vikhreva/code-projects/Pilot/deeppavlov/requirements/tf.txt",
      "/cephfs/home/mary.vikhreva/code-projects/Pilot/deeppavlov/requirements/bert_dp.txt"
    ],
    "labels": {
      "telegram_utils": "NERCoNLL2003Model",
      "server_utils": "NER"
    },
    "download": []
  }
}
