{
  "dataset_reader": {
    "class_name": "file_paths_reader",
    "data_path": "{DOWNLOADS_PATH}/generative_chitchat/",
    "train": "train*",
    "test": "valid*",
    "valid": "valid*"
  },
  "dataset_iterator": {
    "class_name": "persona_topic_chitchat_file_paths_iterator",
    "seed": 31415
  },
  "chainer": {
    "in": [
      "examples"
    ],
    "in_y": [
      "next_sentense"
    ],
    "pipe": [
      {
        "class_name": "test_net",
        "unroll_steps": 20,
        "batch_size": 2,
        "save_path": "{MODELS_PATH}/persona_topic_chitchat_transformer",
        "load_path": "{MODELS_PATH}/persona_topic_chitchat_transformer",
        "in": [
          "examples"
        ],
        "in_y": [
          "next_sentense"
        ],
        "out": [
          "loss"
        ]
      }
    ],
    "out": [
      "loss"
    ]
  },
  "train": {
    "epochs": 2,
    "batch_size": 2,
    "log_every_n_batches": 5,
    "val_every_n_epochs": 1,
    "validation_patience": 4,
    "metric_optimization": "minimize",
    "tensorboard_log_dir": "{MODELS_PATH}/elmo-1b-benchmark_test/logs",
    "class_name": "nn_trainer",
    "evaluation_targets": [
      "valid",
      "test"
    ]
  },
  "metadata": {
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models"
    },
    "requirements": [
      "{DEEPPAVLOV_PATH}/requirements/tf.txt",
      "{DEEPPAVLOV_PATH}/requirements/tf-hub.txt"
    ],
    "download": [
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/elmo-1b-benchmark_test.tar.gz",
        "subdir": "{DOWNLOADS_PATH}"
      }
    ]
  }
}